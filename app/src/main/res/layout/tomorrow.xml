<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/today">

        <TextView
            android:id="@+id/tomorrow"
            android:textColor="@color/common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:text="Tháng tư 3,8:33 PM"
            tools:text="Today" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:weightSum="10">
            <TextView
                android:layout_marginTop="@dimen/padding_top_status"
                android:textColor="@color/common"
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="30dp"
                android:layout_weight="6"/>

            <ImageView
                android:id="@+id/iconweather"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:layout_weight="4"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtTempDayTomorrow"
            android:textColor="@color/common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cảm thấy buồn"
            android:paddingLeft="15dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txtTempNightTomorrow"
            android:textColor="@color/common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Đêm 19 Ngày 22"
            android:textSize="20dp"/>

        <!--<android:lecho.lib.hellocharts.view.LineChartView-->
        <!--android:id="@+id/chart"-->
        <!--layout_marginLeft="50dp"-->
        <!--android:layout_width="400dp"-->
        <!--android:layout_height="100dp" />-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler24hTomorrow"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="130dp">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/black" />
        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details "
            android:textSize="25dp"
            android:textColor="@color/common"/>

        <TextView
            android:id="@+id/doam"
            android:textColor="@color/common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cảm thấy buồn"
            android:paddingLeft="15dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/wind"
            android:textColor="@color/common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Đêm 19 Ngày 22"
            android:textSize="20dp"/>
        <View
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtWindTitleTomorrow"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wind Speed (m/s)"
                android:textColor="@color/common"
                android:textSize="25dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_marginTop="20dp"
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:paddingTop="45dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>